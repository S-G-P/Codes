<div class="mdl-grid">
  <h1 class="mdl-cell mdl-cell--12-col">ユーザ情報</h1>
  <p class="mdl-cell mdl-cell--8-col", id="notice"><%= notice %></p>

  <p class="mdl-cell mdl-cell--8-col">
    <strong>Name:</strong>
    <%= @user.name %>
  </p>
  <p class="mdl-cell mdl-cell--12-col">
    <strong>email:</strong>
    <%= @user.email %>
  </p>
  
  <%= link_to 'Edit', edit_user_path(@user), class: "mdl-button mdl-js-button mdl-button--raised mdl-cell mdl-cell--8-col" %>

  <%= link_to users_path, class: "mdl-cell mdl-cell--8-col" do %>
    <i class="material-icons">arrow_back</i>
  <% end %>
</div>