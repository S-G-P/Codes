<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="mdl-grid">
    <%= devise_error_messages! %>    
    <h2 class="mdl-cell mdl-cell--12-col">SIGN UP</h2>
    <div class="mdl-cell mdl-cell--12-col">
      アカウントを新規に作成します。
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">
      <%= f.label :name, class: 'mdl-textfield__label' %><br>
      <%= f.text_field :name, class: 'mdl-textfield__input', autofocus: true  %>
    </div>
  
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">
      <%= f.label :email, class: 'mdl-textfield__label' %><br>
      <%= f.email_field :email, class: 'mdl-textfield__input'%>
    </div>
  
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">
      <%= f.label :password, class: 'mdl-textfield__label' %><br>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: 'mdl-textfield__input', autocomplete: "off" %>
    </div>
  
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">
      <%= f.label :password_confirmation, class: 'mdl-textfield__label' %><br>
      <%= f.password_field :password_confirmation, class: 'mdl-textfield__input', autocomplete: "off" %>
    </div>
  
    <%= button_tag "SIGNUP", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect mdl-cell mdl-cell--8-col" %>
    <%= render "devise/shared/links" %>
  </div>    
<% end %>

