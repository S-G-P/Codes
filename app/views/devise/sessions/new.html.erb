<div id="back">
  <div class="backRight"></div>
  <div class="backLeft"></div>
</div>

<div id="slideBox">
  <div class="topLayer">
    <div class="left">
      <div class="content-sign-up">
        <h2>Sign Up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
      	    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">	          		          	
	          	<%= f.label :name, class: 'mdl-textfield__label sign-up-input-text' %>
				      <%= f.text_field :name, class: 'mdl-textfield__input', autofocus: true  %>
	          </div>
          </div>	          
          <div class="form-group">
      	    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">	          	
		   	      <%= f.label :email, class: 'mdl-textfield__label sign-up-input-text' %>
  					  <%= f.email_field :email, class: 'mdl-textfield__input'%>
	          </div>    				  
          </div>
          <div class="form-group">
      	    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">	          	
	          	<%= f.label :password, class: 'mdl-textfield__label sign-up-input-text' %>
				      <% if @minimum_password_length %>
				      <em>(<%= @minimum_password_length %> characters minimum)</em>
				      <% end %><br />
				      <%= f.password_field :password, class: 'mdl-textfield__input', autocomplete: "off" %>
		          </div>				      
          </div>
          <div class="form-group">
      	    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">
	          	<%= f.label :password_confirmation, class: 'mdl-textfield__label sign-up-input-text' %>
				      <%= f.password_field :password_confirmation, class: 'mdl-textfield__input', autocomplete: "off" %>
   	         </div>
          </div>
	        <button id="goLeft" type="button" class="off">Login</button>
	        <button>Sign up</button>
        <% end %>
      </div>
    </div>
    
    <div class="right">
      <div class="content-sign-in">
        <h2>Login</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">   
          	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">
				      <%= f.label :email, class: 'mdl-textfield__label'%>
				      <%= f.text_field :email, class: 'mdl-textfield__input', autofocus: true %>
				    </div>
			    </div>
          <div class="form-group">
          	 <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--8-col">
						   <%= f.label :password, class: 'mdl-textfield__label' %>
					     <%= f.password_field :password, class: 'mdl-textfield__input' %>
				    </div>
          </div>
          <% if devise_mapping.rememberable? %>
			      <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect mdl-textfield--floating-label mdl-cell mdl-cell--8-col" for="checkbox">
			        <%= f.check_box :remember_me, class: "mdl-checkbox__input"%>
			        <%= f.label :remember_me, class: "mdl-checkbox__label", rows: "3" %>
			      </label>
			    <% end %>
          <button id="goRight" type="button" class="off">Sign Up</button>
			    <button id="login" type="submit">Login</button>
		    <% end %>        
      </div>
    </div>
  </div>
</div>




