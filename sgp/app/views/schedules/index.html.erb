<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<%= div_tag_if(true, "登録されているデータがありません。") %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date from</th>
      <th>Date to</th>
      <th>Place</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.title %></td>
        <td><%= schedule.date_from %></td>
        <td><%= schedule.date_to %></td>
        <td><%= schedule.place %></td>
        <td><%= schedule.content %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path %>
